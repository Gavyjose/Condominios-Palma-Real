import React, { useState, useEffect } from 'react';
import {
    Settings,
    Building2,
    UserPlus,
    Save,
    Info,
    MapPin,
    Hash,
    CheckCircle2,
    Loader2,
    Trash2,
    FileText
} from 'lucide-react';

const API_URL = import.meta.env.VITE_API_URL || 'http://localhost:3001/api';

const SettingsPanel = ({ onUpdate }) => {
    // Estados para condominios
    const [condominios, setCondominios] = useState([]);
    const [condominioActivo, setCondominioActivo] = useState(null);
    const [newCondo, setNewCondo] = useState({ nombre: '', nombre_torre: '', rif: '', direccion: '' });
    const [editingCondo, setEditingCondo] = useState(null);

    // Estados para apartamentos
    const [apartamentos, setApartamentos] = useState([]);
    const [newApto, setNewApto] = useState({ codigo: '', propietario: '' });
    const [editingApto, setEditingApto] = useState(null);

    // Estados UI
    const [loading, setLoading] = useState(true);
    const [saving, setSaving] = useState(false);
    const [success, setSuccess] = useState(false);

    // Estados para el buscador de mapas (OSM)
    const [searchQuery, setSearchQuery] = useState('');
    const [suggestions, setSuggestions] = useState([]);
    const [searching, setSearching] = useState(false);

    useEffect(() => {
        fetchCondominios();
        fetchCondominioActivo();
        fetchApartamentos();
    }, []);

    const fetchCondominios = async () => {
        try {
            const resp = await fetch(`${API_URL}/condominios`);
            const data = await resp.json();
            setCondominios(data);
        } catch (error) {
            console.error("Error fetching condominios:", error);
        }
    };

    const fetchCondominioActivo = async () => {
        try {
            const resp = await fetch(`${API_URL}/condominios/activo`);
            const data = await resp.json();
            setCondominioActivo(data);
        } catch (error) {
            console.error("Error fetching condominio activo:", error);
        } finally {
            setLoading(false);
        }
    };

    const fetchApartamentos = async () => {
        try {
            const resp = await fetch(`${API_URL}/apartamentos`);
            const data = await resp.json();
            setApartamentos(data);
        } catch (error) {
            console.error("Error fetching apartamentos:", error);
        }
    };


    // ==============================================================================
    // FUNCIONES CRUD - CONDOMINIOS
    // ==============================================================================

    const createCondominio = async (e) => {
        e.preventDefault();
        try {
            const resp = await fetch(`${API_URL}/condominios`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${sessionStorage.getItem('token')}`
                },
                body: JSON.stringify(newCondo)
            });
            if (resp.ok) {
                alert("Condominio creado con éxito");
                setNewCondo({ nombre: '', nombre_torre: '', rif: '', direccion: '' });
                fetchCondominios();
            } else {
                alert("Error al crear condominio");
            }
        } catch (error) {
            console.error("Error creating condominio:", error);
        }
    };

    const updateCondominio = async (id) => {
        try {
            const resp = await fetch(`${API_URL}/condominios/${id}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${sessionStorage.getItem('token')}`
                },
                body: JSON.stringify(editingCondo)
            });
            if (resp.ok) {
                setEditingCondo(null);
                fetchCondominios();
                if (condominioActivo?.id === id) fetchCondominioActivo();
            } else {
                alert("Error al actualizar condominio");
            }
        } catch (error) {
            console.error("Error updating condominio:", error);
        }
    };

    const activarCondominio = async (id) => {
        if (!confirm("¿Cambiar al condominio seleccionado? Esto recargará los datos del edificio activo.")) return;
        try {
            const resp = await fetch(`${API_URL}/condominios/${id}/activar`, {
                method: 'PUT',
                headers: {
                    'Authorization': `Bearer ${sessionStorage.getItem('token')}`
                }
            });
            if (resp.ok) {
                fetchCondominios();
                fetchCondominioActivo();
                fetchApartamentos();
                if (onUpdate) onUpdate();
                alert("Condominio activado. La aplicación se actualizará.");
            } else {
                alert("Error al activar condominio");
            }
        } catch (error) {
            console.error("Error activating condominio:", error);
        }
    };

    const deleteCondominio = async (id) => {
        if (!confirm("¿Eliminar este condominio? Esta acción es irreversible y eliminará todos sus datos asociados (apartamentos, gastos, etc.).")) return;
        try {
            const resp = await fetch(`${API_URL}/condominios/${id}`, {
                method: 'DELETE',
                headers: {
                    'Authorization': `Bearer ${sessionStorage.getItem('token')}`
                }
            });
            if (resp.ok) {
                fetchCondominios();
            } else {
                const errorData = await resp.json();
                alert(`Error: ${errorData.error || 'No se puede eliminar'}`);
            }
        } catch (error) {
            console.error("Error deleting condominio:", error);
        }
    };

    // ==============================================================================
    // FUNCIONES DE UTILIDAD (MAPAS)
    // ==============================================================================

    // Buscador de direcciones (Nominatim OSM)
    const handleSearch = async (query) => {
        setSearchQuery(query);
        if (editingCondo) {
            setEditingCondo({ ...editingCondo, direccion: query });
        }
        if (query.length < 3) {
            setSuggestions([]);
            return;
        }

        setSearching(true);
        try {
            const resp = await fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(query)}&limit=5&addressdetails=1`);
            const data = await resp.json();
            setSuggestions(data);
        } catch (error) {
            console.error("Error buscando dirección:", error);
        } finally {
            setSearching(false);
        }
    };

    const selectAddress = (item) => {
        const fullAddress = item.display_name.toUpperCase();
        if (editingCondo) {
            setEditingCondo({ ...editingCondo, direccion: fullAddress });
        }
        setSearchQuery(fullAddress);
        setSuggestions([]);
    };


    // ==============================================================================
    // FUNCIONES CRUD - APART

    AMENTOS
    // ==============================================================================

    const addApto = async (e) => {
        e.preventDefault();
        try {
            const resp = await fetch(`${API_URL}/apartamentos`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${sessionStorage.getItem('token')}`
                },
                body: JSON.stringify({
                    codigo: newApto.codigo.toUpperCase().trim(),
                    propietario: newApto.propietario.toUpperCase().trim()
                })
            });
            if (resp.ok) {
                alert("Apartamento agregado con éxito");
                setNewApto({ codigo: '', propietario: '' });
                fetchApartamentos();
                if (onUpdate) onUpdate();
            } else {
                const errorData = await resp.json();
                alert(`Error al agregar apto: ${errorData.error || 'Acceso denegado'}`);
            }
        } catch (error) {
            console.error("Error adding apto:", error);
            alert("Error de conexión al registrar el apartamento.");
        }
    };

    const updateApto = async (id) => {
        try {
            const resp = await fetch(`${API_URL}/apartamentos/${id}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${sessionStorage.getItem('token')}`
                },
                body: JSON.stringify({
                    codigo: editingApto.codigo.toUpperCase().trim(),
                    propietario: editingApto.propietario.toUpperCase().trim()
                })
            });
            if (resp.ok) {
                setEditingApto(null);
                fetchApartamentos();
                if (onUpdate) onUpdate();
            } else {
                alert("Error al actualizar apartamento");
            }
        } catch (error) {
            console.error("Error updating apto:", error);
        }
    };

    const deleteApto = async (id) => {
        if (!confirm("¿Seguro que deseas eliminar esta unidad? Esta acción es irreversible y afectará los reportes históricos.")) return;
        try {
            const resp = await fetch(`${API_URL}/apartamentos/${id}`, {
                method: 'DELETE',
                headers: {
                    'Authorization': `Bearer ${sessionStorage.getItem('token')}`
                }
            });
            if (resp.ok) {
                fetchApartamentos();
                if (onUpdate) onUpdate();
            } else {
                alert("Error al eliminar apartamento");
            }
        } catch (error) {
            console.error("Error deleting apto:", error);
        }
    };

    if (loading) return (
        <div className="p-20 text-center">
            <Loader2 className="animate-spin mx-auto text-blue-600 mb-4" size={48} />
            <p className="text-slate-400 font-bold uppercase tracking-widest text-xs">Cargando Configuración...</p>
        </div>
    );

    return (
        <div className="space-y-10 animate-in fade-in slide-in-from-bottom-6 duration-700">
            {/* Header Módulo */}
            <div className="ledger-card p-10 flex flex-col md:flex-row items-center justify-between bg-white border-l-4 border-l-ledger-accent gap-8 shadow-2xl">
                <div className="flex items-center gap-6">
                    <div className="p-4 bg-ledger-audit rounded-2xl border border-ledger-border shadow-inner text-ledger-accent">
                        <Settings size={32} />
                    </div>
                    <div>
                        <h3 className="text-2xl font-black text-ledger-ink uppercase tracking-tighter">Módulo de Configuración</h3>
                        <p className="font-bold text-slate-400 text-xs uppercase tracking-widest mt-1">Parámetros Globales y Gestión de Activos</p>
                    </div>
                </div>
            </div>

            <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
                {/* Formulario Ajustes Generales */}
                <div className="ledger-card p-8 bg-white border-t-4 border-t-ledger-accent shadow-xl">
                    <h4 className="text-sm font-black text-ledger-ink uppercase tracking-[0.2em] mb-8 flex items-center gap-3">
                        <Building2 className="text-ledger-accent" size={18} /> Datos del Condominio
                    </h4>

                    <form onSubmit={saveConfig} className="space-y-6">
                        <div className="space-y-1.5">
                            <label className="text-[9px] font-black text-slate-400 uppercase tracking-widest ml-1">Nombre del Conjunto Residencial</label>
                            <div className="relative group">
                                <Building2 className="absolute left-4 top-3.5 text-slate-300 group-focus-within:text-ledger-accent transition-colors" size={16} />
                                <input
                                    required
                                    type="text"
                                    name="nombre_condominio"
                                    value={config.nombre_condominio}
                                    onChange={handleConfigChange}
                                    className="ledger-input pl-12 bg-ledger-audit border-slate-200 text-[11px] font-black uppercase"
                                />
                            </div>
                        </div>

                        <div className="grid grid-cols-2 gap-6">
                            <div className="space-y-1.5">
                                <label className="text-[9px] font-black text-slate-400 uppercase tracking-widest ml-1">Nombre Torre/Bloque</label>
                                <div className="relative group">
                                    <Hash className="absolute left-4 top-3.5 text-slate-300 group-focus-within:text-ledger-accent transition-colors" size={16} />
                                    <input
                                        required
                                        type="text"
                                        name="nombre_torre"
                                        value={config.nombre_torre}
                                        onChange={handleConfigChange}
                                        className="ledger-input pl-12 bg-ledger-audit border-slate-200 text-[11px] font-black uppercase"
                                    />
                                </div>
                            </div>
                            <div className="space-y-1.5">
                                <label className="text-[9px] font-black text-slate-400 uppercase tracking-widest ml-1">RIF del Condominio</label>
                                <div className="relative group">
                                    <Info className="absolute left-4 top-3.5 text-slate-300 group-focus-within:text-ledger-accent transition-colors" size={16} />
                                    <input
                                        required
                                        type="text"
                                        name="rif"
                                        value={config.rif}
                                        onChange={handleConfigChange}
                                        className="ledger-input pl-12 bg-ledger-audit border-slate-200 text-[11px] font-mono font-black"
                                    />
                                </div>
                            </div>
                        </div>

                        <div className="space-y-1.5 relative">
                            <label className="text-[9px] font-black text-slate-400 uppercase tracking-widest ml-1 flex justify-between items-center">
                                Dirección Física (Buscar en Mapa)
                                {searching && <Loader2 size={10} className="animate-spin text-ledger-accent" />}
                            </label>
                            <div className="relative group">
                                <MapPin className="absolute left-4 top-3.5 text-slate-300 group-focus-within:text-ledger-accent transition-colors" size={16} />
                                <input
                                    required
                                    type="text"
                                    placeholder="Escribe para buscar ubicación..."
                                    value={searchQuery}
                                    onChange={(e) => handleSearch(e.target.value.toUpperCase())}
                                    className="ledger-input pl-12 bg-ledger-audit border-slate-200 text-[11px] font-bold uppercase"
                                />
                            </div>

                            {/* Sugerencias de Direcciones */}
                            {suggestions.length > 0 && (
                                <div className="absolute z-50 left-0 right-0 top-[65px] bg-white border border-slate-200 rounded-xl shadow-2xl overflow-hidden max-h-[200px] overflow-y-auto animate-in fade-in zoom-in duration-200">
                                    {suggestions.map((item, idx) => (
                                        <button
                                            key={idx}
                                            type="button"
                                            onClick={() => selectAddress(item)}
                                            className="w-full p-4 text-left hover:bg-slate-50 border-b border-slate-100 last:border-0 flex items-start gap-3 group"
                                        >
                                            <MapPin size={14} className="mt-1 text-slate-300 group-hover:text-ledger-accent transition-colors shrink-0" />
                                            <span className="text-[10px] font-bold text-slate-600 leading-tight uppercase tracking-tight">{item.display_name}</span>
                                        </button>
                                    ))}
                                </div>
                            )}
                        </div>

                        <div className="pt-6 border-t border-slate-100 flex justify-end items-center gap-4">
                            {success && (
                                <span className="flex items-center gap-2 text-emerald-600 text-[10px] font-black uppercase">
                                    <CheckCircle2 size={14} /> Guardado con éxito
                                </span>
                            )}
                            <button
                                type="submit"
                                disabled={saving}
                                className="px-10 py-4 bg-ledger-ink text-white rounded-xl font-black text-[10px] uppercase tracking-widest hover:bg-black transition-all flex items-center gap-3 shadow-xl shadow-ledger-ink/20"
                            >
                                {saving ? <Loader2 className="animate-spin" size={14} /> : <Save size={14} />}
                                {saving ? "Guardando..." : "Guardar Cambios"}
                            </button>
                        </div>
                    </form>
                </div>

                {/* Gestión de Unidades */}
                <div className="ledger-card p-8 bg-white border-t-4 border-t-ledger-ink shadow-xl space-y-8">
                    <div>
                        <h4 className="text-sm font-black text-ledger-ink uppercase tracking-[0.2em] mb-8 flex items-center gap-3">
                            <UserPlus className="text-ledger-ink" size={18} /> Registro de Nuevos Propietarios
                        </h4>

                        <form onSubmit={addApto} className="space-y-6">
                            <div className="p-6 bg-slate-50 rounded-2xl border border-slate-200 space-y-4">
                                <div className="space-y-1.5">
                                    <label className="text-[9px] font-black text-slate-400 uppercase tracking-widest ml-1">Código del Apartamento</label>
                                    <input
                                        required
                                        type="text"
                                        placeholder="Ej: 4-B"
                                        value={newApto.codigo}
                                        onChange={(e) => setNewApto({ ...newApto, codigo: e.target.value.toUpperCase() })}
                                        className="ledger-input bg-white border-slate-200 text-[11px] font-black uppercase"
                                    />
                                </div>
                                <div className="space-y-1.5">
                                    <label className="text-[9px] font-black text-slate-400 uppercase tracking-widest ml-1">Nombre Completo del Propietario</label>
                                    <input
                                        required
                                        type="text"
                                        placeholder="Nombre y Apellido"
                                        value={newApto.propietario}
                                        onChange={(e) => setNewApto({ ...newApto, propietario: e.target.value.toUpperCase() })}
                                        className="ledger-input bg-white border-slate-200 text-[11px] font-black uppercase"
                                    />
                                </div>
                            </div>

                            <div className="pt-6 flex justify-end">
                                <button
                                    type="submit"
                                    className="px-10 py-4 bg-ledger-accent text-white rounded-xl font-black text-[10px] uppercase tracking-widest hover:bg-blue-700 transition-all flex items-center gap-3 shadow-xl shadow-blue-600/20"
                                >
                                    <UserPlus size={14} /> Registrar Propietario
                                </button>
                            </div>
                        </form>
                    </div>

                    <div className="pt-8 border-t border-slate-100">
                        <h4 className="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] mb-6">Listado de Unidades Registradas</h4>
                        <div className="max-h-[400px] overflow-y-auto border border-slate-100 rounded-xl">
                            <table className="w-full text-left border-collapse">
                                <thead className="sticky top-0 bg-slate-50 z-10">
                                    <tr className="border-b border-slate-200">
                                        <th className="p-4 text-[9px] font-black text-slate-400 uppercase tracking-widest">Apto</th>
                                        <th className="p-4 text-[9px] font-black text-slate-400 uppercase tracking-widest">Propietario</th>
                                        <th className="p-4 text-center text-[9px] font-black text-slate-400 uppercase tracking-widest">Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {apartamentos.map((apto) => (
                                        <tr key={apto.id} className="border-b border-slate-50 hover:bg-slate-50/50 transition-colors">
                                            <td className="p-4">
                                                {editingApto?.id === apto.id ? (
                                                    <input
                                                        type="text"
                                                        value={editingApto.codigo}
                                                        onChange={(e) => setEditingApto({ ...editingApto, codigo: e.target.value.toUpperCase() })}
                                                        className="w-20 p-2 bg-white border border-blue-200 rounded text-[10px] font-black uppercase"
                                                    />
                                                ) : (
                                                    <span className="text-[11px] font-black text-ledger-ink uppercase tracking-tighter">{apto.codigo}</span>
                                                )}
                                            </td>
                                            <td className="p-4">
                                                {editingApto?.id === apto.id ? (
                                                    <input
                                                        type="text"
                                                        value={editingApto.propietario}
                                                        onChange={(e) => setEditingApto({ ...editingApto, propietario: e.target.value.toUpperCase() })}
                                                        className="w-full p-2 bg-white border border-blue-200 rounded text-[10px] font-black uppercase"
                                                    />
                                                ) : (
                                                    <span className="text-[10px] font-bold text-slate-500 uppercase tracking-tight">{apto.propietario}</span>
                                                )}
                                            </td>
                                            <td className="p-4 flex items-center justify-center gap-2">
                                                {editingApto?.id === apto.id ? (
                                                    <>
                                                        <button onClick={() => updateApto(apto.id)} className="p-2 bg-emerald-500 text-white rounded-lg hover:bg-emerald-600 transition-all"><Save size={14} /></button>
                                                        <button onClick={() => setEditingApto(null)} className="p-2 bg-slate-200 text-slate-600 rounded-lg hover:bg-slate-300 transition-all">X</button>
                                                    </>
                                                ) : (
                                                    <>
                                                        <button onClick={() => setEditingApto(apto)} className="p-2 text-blue-500 hover:bg-blue-50 rounded-lg transition-all"><FileText size={14} /></button>
                                                        <button onClick={() => deleteApto(apto.id)} className="p-2 text-red-400 hover:bg-red-50 rounded-lg transition-all"><Trash2 size={14} /></button>
                                                    </>
                                                )}
                                            </td>
                                        </tr>
                                    ))}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div className="mt-8 p-4 bg-blue-50/50 rounded-xl border border-blue-100 flex items-start gap-3">
                        <Info className="text-blue-600 mt-1 shrink-0" size={16} />
                        <p className="text-[10px] text-blue-700 leading-relaxed font-bold uppercase tracking-tight">
                            Puedes editar el código y propietario de cualquier unidad. Asegúrate de mantener la coherencia con los registros del banco.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    );
};

export default SettingsPanel;
